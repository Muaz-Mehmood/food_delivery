<% if current_user && current_user.admin? %>
    <%= link_to 'Edit', edit_product_path %>
    <%= button_to 'Delete', product_path(@product), :method => :delete, data: {confirm: "Are you sure..."} %>
<% end %>

<h1><%= @product.name %></h1>
<%= image_tag(@product.image, style: "width: 100px; height: 100px;") %>
<div>
    <%= @product.description %>
</div><br>
<strong>
    <%= @product.price %>
</strong><br>

<%= link_to 'Back', products_path %>