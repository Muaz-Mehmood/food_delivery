<h2 class="heading text-center my-4">Log in</h2>

<div class="w-75 mx-auto mb-5">
  <div class="form-bg w-50 p-5 m-auto rounded-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form w-50") do |f| %>
      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field form-group">
          <%= f.check_box :remember_me%>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "form-btn w-100 btn btn-dark border-0" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
